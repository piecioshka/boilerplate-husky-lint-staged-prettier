{
    "name": "boilerplate-husky-lint-staged-prettier",
    "devDependencies": {
        "husky": "^7.0.0",
        "lint-staged": "^11.1.2",
        "prettier": "^2.3.2"
    },
    "scripts": {
        "prepare": "husky install",
        "pre-commit": "lint-staged"
    },
    "lint-staged": {
        "*.md": "prettier --write"
    },
    "prettier": {
        "trailingComma": "all",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true,
        "arrowParens": "avoid",
        "proseWrap": "never"
    }
}
