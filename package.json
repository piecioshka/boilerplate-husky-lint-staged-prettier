{
    "name": "boilerplate-husky-lint-staged-prettier",
    "devDependencies": {
        "husky": "^4.2.3",
        "lint-staged": "^10.1.2",
        "prettier": "^2.0.4"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.md": "prettier --write"
    },
    "prettier": {
        "trailingComma": "all",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true,
        "arrowParens": "avoid",
        "proseWrap": "never"
    }
}
